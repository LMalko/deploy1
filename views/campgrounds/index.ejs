<% include ../partials/header %>

<div class="container">
    <header class="jumbotron p-3">
        <h2 class="ml-3">Welcome to Campgrounds!</h2>
        <p class="ml-3">View our hand-picked campgrounds from all over the world!</p>
        <div class="container BorderBox">
            <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
            <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="submit" value="Search"
                           class="btn btn-lg btn-warning mt-3 mr-3">
                    <input type="text" name="search"
                           placeholder="search..."
                           class="form-control mt-3">

                </div>
            </form>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){%>
        <div class="col-lg-3 col-md-3 col-sm-6">
            <div class="card text-white bg-success">
                <img class="card-img-top CampgroundsIndexImage"
                     src="<%= campground.image %>" alt="<%= campground.name %>">
                <h4 class="card-title"><%= campground.name %></h4>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-light">More info</a>
                </p>
            </div>

            <div class="card-body">

            </div>
        </div>
        <%});%>
    </div>
</div>


<div class="container CenterContent">
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination">
            <% if (current == 1) { %>
            <li class="disabled btn btn-info"><a >First</a></li>
            <% } else { %>
            <li><a class="btn btn-info" href="/campgrounds">First</a></li>
            <% } %>

            <% if (current == 1) { %>
            <li class="disabled"><a class="btn btn-warning" >«</a></li>
            <% } else { %>
            <li><a class="btn btn-warning" href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>

            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a class="btn btn-danger">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a class="btn btn-danger"><%= i %></a></li>
            <% } else { %>
            <li><a class="btn btn-outline-danger" href="/campgrounds?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a class="btn btn-danger">...</a></li>
            <% } %>
            <% } %>

            <% if (current == pages) { %>
            <li class="disabled"><a class="btn btn-warning">»</a></li>
            <% } else { %>
            <li><a class="btn btn-warning" href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>

            <% if (current == pages) { %>
            <li class="disabled btn btn-info"><a>Last</a></li>
            <% } else { %>
            <li><a class="btn btn-info" href="/campgrounds?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>






