<% include ../partials/header %>

<div class="container whiteTextColor" style="text-align: center;">
    <h1>EDIT <%= user.username %>'s AVATAR</h1>

    <div class="row" >
        <div class="NewPost">
            <!-- REST way to code 'PUT'-->
            <!-- campground_id will be passed by router.get when rendering.-->
            <form
                    action="/users/<%= user._id %>?_method=PUT"
                    method="POST">
                <div class="form-group">
                    <!--Change placeholder to value to display current attribute-->
                    <!--Group attributes together in user[] to pas to UPDATE-->
                    <input class="form-control" type="text" name="user[avatar]"
                           value="<%= user.avatar%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>

<!--Dummy container-->
<div style="margin-bottom: 320px"></div>

<% include ../partials/footer %>