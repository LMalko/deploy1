<% include ./partials/header %>

<div class="container whiteTextColor" style="text-align: center;">
    <h1>RESET PASSWORD</h1>

    <div class="row" >
        <div class="NewPost">
            <!-- REST way to code 'PUT'-->
            <!-- campground_id will be passed by router.get when rendering.-->
            <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <input type="password" name="password" value=""
                           placeholder="New password" autofocus="autofocus" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="password" name="confirm" value=""
                           placeholder="Confirm password" class="form-control"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>

<!--Dummy container-->
<div style="margin-bottom: 320px"></div>

<% include ./partials/footer %>